<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.my.boilerplate"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme.CustomToolbar">

        <!-- Fabric Crashlytics -->
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="7a93d58e91c332d945504f74acaf1d5190579e80"/>

        <!-- Splash Screen -->
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Start Page -->
        <activity
            android:name=".StartActivity"
            android:theme="@style/AppTheme.CustomToolbar">
        </activity>

        <!-- Other pages -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/menu_settings"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".CollageEditorActivity"
            android:label="@string/title_collage_editor_sample"
            android:theme="@style/AppTheme.CustomToolbar">
        </activity>
        <activity
            android:name=".DrawerSampleActivity"
            android:label="@string/title_drawer_sample"
            android:theme="@style/AppTheme.CustomToolbar">
        </activity>
        <activity
            android:name=".NotificationSampleActivity"
            android:label="@string/title_notification_sample"
            android:theme="@style/AppTheme.CustomToolbar">
        </activity>
        <!-- Notification result activity with back stack -->
        <activity
            android:name=".NotificationResultSampleActivity1"
            android:label="@string/title_notification_result_sample"
            android:parentActivityName=".StartActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartActivity"/>
        </activity>
        <!-- Transient notification result activity -->
        <activity
            android:name=".NotificationResultSampleActivity2"
            android:label="@string/title_notification_result_sample"
            android:launchMode="singleTask"
            android:taskAffinity=""
            android:excludeFromRecents="true">
        </activity>

        <!-- Permission Shadow Activity -->
        <activity
            android:name=".util.PermissionActivity"
            android:launchMode="singleTop"
            android:theme="@style/InvisibleTheme">
        </activity>
    </application>

</manifest>
