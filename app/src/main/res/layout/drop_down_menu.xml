<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The background -->
    <ImageView
        android:id="@+id/menu_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        app:srcCompat="@color/bg_transparent_black"
        tools:alpha="1"/>

    <!-- The menu items -->
    <android.support.v7.widget.GridLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:columnCount="3"
        app:orientation="horizontal"
        app:rowCount="2">

        <com.my.boilerplate.view.SquaredMenuItemView
            android:id="@+id/menu_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_border_rect"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            app:caption="@string/settings"
            app:iconSrcCompat="@drawable/ic_settings"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <com.my.boilerplate.view.SquaredMenuItemView
            android:id="@+id/menu_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_border_rect"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            app:caption="@string/settings"
            app:iconSrcCompat="@drawable/ic_settings"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <com.my.boilerplate.view.SquaredMenuItemView
            android:id="@+id/menu_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_border_rect"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            app:caption="@string/settings"
            app:iconSrcCompat="@drawable/ic_settings"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <com.my.boilerplate.view.SquaredMenuItemView
            android:id="@+id/menu_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_border_rect"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            app:caption="@string/settings"
            app:iconSrcCompat="@drawable/ic_settings"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <com.my.boilerplate.view.SquaredMenuItemView
            android:id="@+id/menu_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_border_rect"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            app:caption="@string/settings"
            app:iconSrcCompat="@drawable/ic_settings"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <com.my.boilerplate.view.SquaredMenuItemView
            android:id="@+id/menu_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_border_rect"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:orientation="vertical"
            app:caption="@string/settings"
            app:iconSrcCompat="@drawable/ic_settings"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>
    </android.support.v7.widget.GridLayout>
</merge>
