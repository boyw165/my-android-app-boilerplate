<resources>

    <!-- common Activity theme with system tool bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <!-- API 21 -->
        <!-- Enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/slide_up_enter</item>
        <item name="android:windowReturnTransition">@transition/slide_down_exit</item>
        <!-- FIXME: The settings don't work -->
        <!-- Disable default window transition -->
        <!--<item name="android:windowAnimationStyle">@null</item>-->
    </style>

    <!-- Activity with translucent black background painted by the window -->
    <style name="AppTheme.TranslucentBlackBg" parent="AppTheme.CustomToolbar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <!-- API 21 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>
